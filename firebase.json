{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/frog",
        "destination": "/frog.html"
      },
      {
        "source": "/cricket",
        "destination": "/cricket.html"
      },
      {
        "source": "/smoke",
        "destination": "/smoke.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ]
  }
}